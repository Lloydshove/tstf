<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="com.lucasia.tstf.jester"/>

    <bean id="propertyConfig" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:prod.properties</value>
            </list>
        </property>
    </bean>

    <bean id="markLogic" class="com.lucasia.tstf.jester.providers.marklogic.MarkLogic">
        <constructor-arg name="user" value="${datasource.user}"/>
        <constructor-arg name="password" value="${datasource.password}"/>
        <constructor-arg name="url" value="${datasource.url}"/>
    </bean>

</beans>
